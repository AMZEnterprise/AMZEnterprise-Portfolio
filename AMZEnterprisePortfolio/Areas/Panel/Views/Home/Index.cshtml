@{
    ViewData["Title"] = "Dashboard";
}


<section id="topLabel">
    <div class="container-fluid">
        <div class="row text-white">
            <div class="col-12 text-center py-5">
                <h2><span class="fa fa-user"></span> Admin Panel</h2>
            </div>
        </div>
    </div>
</section>

<section id="welcomeMessage">
    <div class="container-fluid text-center text-white">
        <div class="row">
            <div class="col">
                <h4>
                    Welcome
                </h4>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-dark">
                    <span class="fa fa-home"></span>
                    Back to website
                </a>
            </div>
        </div>
    </div>
</section>


<section>
    <div class="container-fluid">
        <div class="row my-5">
            <div class="col-lg-3 col-md-3 col-sm-6 col-12">
                <a asp-controller="Contacts" asp-action="Index" class="btn btn-danger p-5 btn-block rounded-0 mt-lg-0 mt-md-0 mt-sm-3 mt-3">
                   <span class="h4">Contacts</span>
                </a>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 col-12">
                <a asp-controller="Portfolios" asp-action="Index" class="btn btn-warning text-white p-5 btn-block rounded-0 mt-lg-0 mt-md-0 mt-sm-3 mt-3">
                    <span class="h4">Portfolios</span>
                </a>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 col-12">
                <a asp-controller="Resumes" asp-action="Index" class="btn btn-primary p-5 btn-block rounded-0 mt-lg-0 mt-md-0 mt-sm-3 mt-3">
                    <span class="h4">Resumes</span>
                </a>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 col-12">
                <a asp-controller="Skills" asp-action="Index" class="btn btn-success p-5 btn-block rounded-0 mt-lg-0 mt-md-0 mt-sm-3 mt-3">
                    <span class="h4">Skills</span>
                </a>
            </div>
        </div>
    </div>
</section>