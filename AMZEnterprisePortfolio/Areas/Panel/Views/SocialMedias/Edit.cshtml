@model AMZEnterprisePortfolio.Models.SocialMedia

@{
    Layout = "_FormLayout";
    ViewData["Title"] = "Edit SocialMedia";
}

<form asp-action="Edit" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="Url"></label>
        <input asp-for="Url" class="form-control" />
        <span asp-validation-for="Url"></span>
    </div>
    <div class="form-group">
        <label asp-for="IconCss"></label>
        <input asp-for="IconCss" class="form-control" />
        <span asp-validation-for="IconCss"></span>
    </div>

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <button class="btn btn-primary float-left" type="submit">Edit</button>
        <a asp-action="Index" class="btn btn-danger float-right">Back</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger float-right mr-2">Delete</a>
    </div>
</form>