@using AMZEnterprisePortfolio.Models
@model AMZEnterprisePortfolio.Models.Skill

@{
    Layout = "_FormLayout";
    ViewData["Title"] = "Create Skill";
}

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Percent"></label>
        <input asp-for="Percent" class="form-control" />
        <span asp-validation-for="Percent" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SkillType"></label>
        <select asp-for="SkillType" asp-items="Html.GetEnumSelectList<SkillType>()" class="custom-select"></select>
        <span asp-validation-for="SkillType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button class="btn btn-success float-left" type="submit">Create</button>
        <a asp-action="Index" class="btn btn-danger float-right">Back</a>
    </div>
</form>