@using AMZEnterprisePortfolio.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<User> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Admin Panel - @ViewData["Title"]</title>


    <link rel="icon" type="image/x-icon" href="~/img/favicon.png">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Muli:300,400,600" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,500,600,700" rel="stylesheet">


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />

    <link rel="stylesheet" href="~/lib/datatables/css/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/lib/datatables/css/responsive.bootstrap4.min.css" />

    <link rel="stylesheet" href="~/css/panel-default.css" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg  navbar-dark bg-dark">
            <a asp-controller="Home" asp-action="Index" class="navbar-brand text-danger mr-4 ml-4">Admin Panel</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#NavbarTop">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="NavbarTop">
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <a asp-controller="Contacts" asp-action="Index" class="nav-link">Contacts</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Favors" asp-action="Index" class="nav-link">Favors</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Portfolios" asp-action="Index" class="nav-link">Portfolios</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Resumes" asp-action="Index" class="nav-link">Resumes</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Skills" asp-action="Index" class="nav-link">Skills</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="SocialMedias" asp-action="Index" class="nav-link">Social Medias</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Settings" asp-action="Index" class="nav-link">Settings</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item">
                        <a asp-controller="Manage" asp-action="Edit" asp-route-id="@UserManager.GetUserId(User)" class="nav-link">
                            <i class="fa fa-user-circle"></i>
                            <span id="username">
                                @User.Identity.Name
                            </span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <form method="post" asp-controller="Manage" asp-action="Logout">
                            <button type="submit" class="btn btn-danger" title="LogOut">
                                <span class="fa fa-power-off"></span>
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        @RenderBody()
    </div>



    <footer class="mt-5 fixed-bottom">
        <div class="container-fluid">
            <div class="row pt-2 bg-secondary text-white text-center">
                <div class="col-12">
                    &copy; AMZ Enterprise @DateTime.Now.Year
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript" src="~/lib/popper.js/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/datatables/js/responsive.bootstrap4.min.js"></script>

    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script src="~/lib/ckeditor/config.js"></script>
    <script src="~/lib/ckeditor/adapters/jquery.js"></script>

    <script src="~/js/Panel.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>