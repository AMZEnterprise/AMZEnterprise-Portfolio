@model IEnumerable<AMZEnterprisePortfolio.Models.Contact>

@{
    ViewData["Title"] = "Contacts";
}
@section Scripts
{
    <script>
        Panel.LoadContacts('@Url.Action("LoadContactsTable")', '@Url.Action("Edit")');
    </script>
}

<div class="my-5">
    <h1>@ViewData["Title"]</h1>
    <a asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="contact" class="btn btn-success py-3 px-5 mt-3 ml-2 my-2">
        Create
        <span class="fa fa-plus"></span>
    </a>
</div>

<table id="jq-table" class="table table-striped table-bordered dt-responsive nowrap table-dark" width="100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th class="no-sort"></th>
        </tr>
    </thead>
</table>